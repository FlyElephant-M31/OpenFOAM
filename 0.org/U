FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet 
    {
        type            fixedValue;
        value           uniform (0.07 0 0);
    }

    outlet
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      uniform (0 0 0);
    }

    cylinder 
    {

        type groovyBC;

        variables
        (
            "f=0.05*(time()-15)*(time()-15);"
            "zero=vector(0,0,0);"
            "rot=f*(vector(0,0,1) ^ pos());"
        );

//        valueExpression "t > start ? vector(0,0,0) : vector(0,0,0)"; 
        valueExpression "time() > 15 ? rot : zero ";
        
  //      fractionExpression "1";
 //       gradientExpression "";

        value       uniform (0 0 0);
    }

    bottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    top
    {
        type            slip;
    }

    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }
}

// ************************************************************************* //
