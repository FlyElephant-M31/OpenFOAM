#!/bin/bash
#
#----------------------------------------------#
# Contributor: Tobias Holzmann                 #
# Last Change: March 2016                      #
# Topic:       Magnus effect                   #
# Email:       Tobias.Holzmann@Holzmann-cfd.de #
#----------------------------------------------#


#------------------------------------------------------------------------------
cd ${0%/*} || exit 1
clear
source clean


#------------------------------------------------------------------------------
echo -e "
-------------------------------------------------------------------------------
Tutorial by Tobias Holzmann
Generated March 2016    
OpenFOAM-2.3.1


Topic: Magnus effect
-------------------------------------------------------------------------------"


#------------------------------------------------------------------------------
echo -e "\n
Start meshing
-------------------------------------------------------------------------------
"


#------------------------------------------------------------------------------
echo -e "   - Create background mesh"
ideasUnvToFoam cad/backgroundMesh.unv > logFile


#------------------------------------------------------------------------------
echo -e "   - Meshing with snappyHexMesh"
snappyHexMesh -overwrite >> logFile


#------------------------------------------------------------------------------
echo -e "   - Extrude one patch to make a 2D mesh"
extrudeMesh  >> logFile


#------------------------------------------------------------------------------
echo -e "   - Change patch type in the boundary file" 
changeDictionary  >> logFile


#------------------------------------------------------------------------------
echo -e "   - Translate mesh to point (0 0 0) -> for groovyBC" 
transformPoints -translate "(0 -0.15 -0.1)"  >> logFile


#------------------------------------------------------------------------------
echo -e "\n
-------------------------------------------------------------------------------
End Meshing\n
"


#------------------------------------------------------------------------------
echo -e "   - Copy 0.org to 0"
rm -r 0
cp -r 0.org 0


#------------------------------------------------------------------------------
echo -e "   - Start simulation (approximately 7 minutes)"
pisoFoam > logSolver


#------------------------------------------------------------------------------
echo -e "   - Simulation ended\n\n"


#------------------------------------------------------------------------------
